@model PerformanceRatingSystem.Application.Dtos.AchievementDto
@{
    Layout = "_Layout";
}

<h2>Детали достижения</h2>

<div>
    <h4>Достижение</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.AchievementId</dd>

        <dt class="col-sm-2">Описание</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Дата достижения</dt>
        <dd class="col-sm-10">@Model.DateAchieved.ToShortDateString()</dd>

        <dt class="col-sm-2">Сотрудник</dt>
        <dd class="col-sm-10"> @Model.Employee?.FullName</dd>
    </dl>
</div>

<a asp-controller="Achievements" asp-action="Edit" asp-route-id="@Model.AchievementId">Редактировать</a> |
<a asp-controller="Achievements" asp-action="Index">Назад к списку</a>