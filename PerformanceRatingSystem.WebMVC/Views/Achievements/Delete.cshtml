@model PerformanceRatingSystem.Application.Dtos.AchievementDto

@{
    ViewData["Title"] = "Удалить";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удаление</h2>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Достижение</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Employee.FullName)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.DateAchieved)
        </dt>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="AchievementId" />
        <input type="submit" value="Удалить" class="btn btn-default" /> |
        <a asp-controller="Achievements" asp-action="Index">Вернуться к списку</a>
    </form>
</div>
