@model PerformanceRatingSystem.Application.Dtos.DepartmentPerformanceIndicatorDto
@{
    Layout = "_Layout";
}

<h2>Детали показателя производительности отдела</h2>

<div>
    <h4>Показатель производительности</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.IndicatorId</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Отдел</dt>
        <dd class="col-sm-10">@Model.Department?.Name</dd> <!-- Отображаем название отдела -->
    </dl>
</div>

<a asp-controller="DepartmentPerformanceIndicators" asp-action="Edit" asp-route-id="@Model.IndicatorId">Редактировать</a> |
<a asp-controller="DepartmentPerformanceIndicators" asp-action="Index">Назад к списку</a>