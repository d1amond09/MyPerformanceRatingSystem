@model PerformanceRatingSystem.Application.Dtos.ActualPerformanceResultDto
@{
    Layout = "_Layout";
}

<h2>Детали результата фактической производительности</h2>

<div>
    <h4>Результат</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.ResultId</dd>

        <dt class="col-sm-2">Тип показателя</dt>
        <dd class="col-sm-10">@Model.IndicatorType</dd>

        <dt class="col-sm-2">Значение</dt>
        <dd class="col-sm-10">@Model.Value</dd>

        <dt class="col-sm-2">Год</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Квартал</dt>
        <dd class="col-sm-10">@Model.Quarter</dd>

        <dt class="col-sm-2">Показатель</dt>
        <dd class="col-sm-10">@Model.Indicator?.Name</dd>
    </dl>
</div>

<a asp-controller="ActualPerformanceResults" asp-action="Edit" asp-route-id="@Model.ResultId">Редактировать</a> |
<a asp-controller="ActualPerformanceResults" asp-action="Index">Назад к списку</a>