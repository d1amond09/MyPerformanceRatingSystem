@model PerformanceRatingSystem.Application.Dtos.ActualPerformanceResultForCreationDto

@{
    ViewData["Title"] = "Создать результат фактической производительности";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Добавить новый результат</h2>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="IndicatorType" class="control-label"></label>
                <input asp-for="IndicatorType" class="form-control" />
                <span asp-validation-for="IndicatorType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Value" class="control-label"></label>
                <input asp-for="Value" class="form-control" />
                <span asp-validation-for="Value" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quarter" class="control-label"></label>
                <input asp-for="Quarter" class="form-control" min="1" max="4" />
                <span asp-validation-for="Quarter" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="IndicatorId" class="control-label"></label>
                <select asp-for="IndicatorId" class="form-control" asp-items="ViewBag.IndicatorId">
                    <option value="">-- Выберите показатель --</option>
                </select>
                <span asp-validation-for="IndicatorId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Вернуться к списку результатов</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}