@model PerformanceRatingSystem.Application.Dtos.ActualPerformanceResultDto

@{
    ViewData["Title"] = "Удалить результат производительности";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Удаление результата производительности</h2>

<h3>Вы уверены, что хотите удалить это?</h3>
<div>
    <h4>Результат производительности</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.IndicatorType)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IndicatorType)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Value)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Value)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Year)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Year)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Quarter)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Quarter)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Indicator)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Indicator.Name) 
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="ResultId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-controller="ActualPerformanceResults" asp-action="Index" class="btn btn-default">Вернуться к списку</a>
    </form>
</div>