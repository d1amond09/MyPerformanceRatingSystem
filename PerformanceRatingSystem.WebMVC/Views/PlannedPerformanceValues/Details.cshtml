@model PerformanceRatingSystem.Application.Dtos.PlannedPerformanceValueDto
@{
    Layout = "_Layout";
}

<h2>Детали запланированного значения производительности</h2>

<div>
    <h4>Запланированное значение</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.PlanId</dd>

        <dt class="col-sm-2">Тип показателя</dt>
        <dd class="col-sm-10">@Model.IndicatorType</dd>

        <dt class="col-sm-2">Значение</dt>
        <dd class="col-sm-10">@Model.Value</dd>

        <dt class="col-sm-2">Год</dt>
        <dd class="col-sm-10">@Model.Year</dd>

        <dt class="col-sm-2">Квартал</dt>
        <dd class="col-sm-10">@Model.Quarter</dd>

        <dt class="col-sm-2">Показатель</dt>
        <dd class="col-sm-10">@Model.Indicator?.Name</dd> 
    </dl>
</div>

<a asp-controller="PlannedPerformanceValues" asp-action="Edit" asp-route-id="@Model.PlanId">Редактировать</a> |
<a asp-controller="PlannedPerformanceValues" asp-action="Index">Назад к списку</a>