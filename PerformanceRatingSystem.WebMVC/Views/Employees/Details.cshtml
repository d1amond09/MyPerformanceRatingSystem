@model PerformanceRatingSystem.Application.Dtos.EmployeeDto
@{
    Layout = "_Layout";
}

<h2>Детали сотрудника</h2>

<div>
    <h4>Сотрудник</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.EmployeeId</dd>

        <dt class="col-sm-2">ФИО</dt>
        <dd class="col-sm-10">@Model.FullName</dd>

        <dt class="col-sm-2">Должность</dt>
        <dd class="col-sm-10">@Model.Position</dd>

        <dt class="col-sm-2">Отдел</dt>
        <dd class="col-sm-10">@Model.Department.Name</dd>
    </dl>
</div>

<a asp-controller="Employees" asp-action="Edit" asp-route-id="@Model.EmployeeId">Редактировать</a> |
<a asp-controller="Employees" asp-action="Index">Назад к списку</a>
