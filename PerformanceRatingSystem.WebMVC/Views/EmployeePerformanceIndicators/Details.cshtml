@model PerformanceRatingSystem.Application.Dtos.EmployeePerformanceIndicatorDto
@{
    Layout = "_Layout";
}

<h2>Детали показателя производительности сотрудника</h2>

<div>
    <h4>Показатель производительности</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.IndicatorId</dd>

        <dt class="col-sm-2">Название</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Сотрудник</dt>
        <dd class="col-sm-10">@Model.Employee?.FullName</dd> 
    </dl>
</div>

<a asp-controller="EmployeePerformanceIndicators" asp-action="Edit" asp-route-id="@Model.IndicatorId">Редактировать</a> |
<a asp-controller="EmployeePerformanceIndicators" asp-action="Index">Назад к списку</a>