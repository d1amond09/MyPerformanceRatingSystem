@model PerformanceRatingSystem.Application.Dtos.EmployeePerformanceIndicatorForUpdateDto
@{
    ViewBag.Title = "Редактирование индикатора производительности сотрудника";
}

<h2>Редактировать индикатор производительности сотрудника</h2>

<form asp-action="Edit" asp-controller="EmployeePerformanceIndicators">
    <h4>Индикатор производительности сотрудника</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label col-md-2">Название индикатора</label>
        <input type="text" asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="EmployeeId" class="control-label col-md-2">Сотрудник</label>
        <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
        <span asp-validation-for="EmployeeId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-warning" />
    </div>
</form>

<div>
    <a asp-action="Index" class="btn btn-sm btn-primary">Вернуться</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}